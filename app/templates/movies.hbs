<div class="container">
  <div class="nice-rectangle row bg-primary">
    <div class="col-xs-12 text-center">
      <h1>{{i18n 'title'}}</h1>
    </div>
  </div>
  <div class="nice-rectangle row bg-warning">
    <div class="col-xs-12">

      {{add-movie-form}}

      <!-- movies list -->
      <div class="row">
        <div class="col-xs-12">
          {{#each model as |movie|}}
            <div class="row nice-rectangle bg-info">
              <div class="col-xs-8">
                <h1>{{movie.title}} <small>{{movie.release}}</small></h1>
                <h4><b>Directed by:</b> {{movie.director}}</h4>
                {{#each movie.cast as |cast|}}
                  <p>{{cast.name}} as {{cast.role}}</p>
                {{/each}}
              </div>
              <div class="movie-buttons col-xs-4 text-right">
                <button {{action "edit" movie}} class="btn btn-primary">
                  {{fa-icon "pencil" size="lg"}}
                </button>
                <button {{action "remove" movie}} class="btn btn-danger">
                  {{fa-icon "trash" size="lg"}}
                </button>
              </div>
            </div>
          {{else}}
            <div class="col-xs-12 text-center">
              <h3>{{i18n 'movie.empty'}}</h3>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
